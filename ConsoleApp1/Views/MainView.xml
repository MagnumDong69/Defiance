    <control progid="DecalControls.PushButton"  name="Fixbusy"        height="40" text="FIX" />
    <control progid="DecalControls.PushButton"  name="Loc"            height="40" text="HELP" />
    <control progid="DecalControls.StaticText"  name="ModeLbl"        height="20" text="Mode: " />
    <control progid="DecalControls.Choice"      name="Modes"          left="200"   width="110" height="25" />

    <control progid="DecalControls.PushButton"  name="Imperil"        height="20" text="Imp" />
    <control progid="DecalControls.PushButton"  name="Bludge"         height="20" text="Bludge" />
    <control progid="DecalControls.PushButton"  name="Pierce"         height="20" text="Pierce" />
    <control progid="DecalControls.PushButton"  name="Slash"          height="20" text="Slash" />
    <control progid="DecalControls.PushButton"  name="Light"          height="20" text="Light" />
    <control progid="DecalControls.PushButton"  name="Acid"           height="20" text="Acid" />
    <control progid="DecalControls.PushButton"  name="Fire"           height="20" text="Fire" />
    <control progid="DecalControls.PushButton"  name="Cold"           height="20" text="Cold" />
    <control progid="DecalControls.PushButton"  name="Tag"            height="40" text="TAG!" />

    <control progid="DecalControls.PushButton"  name="Stam"           height="20"  text="Stam!"/>
    <control progid="DecalControls.PushButton"  name="Harm"           height="20"  text="Harm!"/>

    <control progid="DecalControls.StaticText"  name="VersusNote"     height="20" text="versus" />
    <control progid="DecalControls.StaticText"  name="EnemyNote"      height="20" />
    <control progid="DecalControls.StaticText"  name="GuildNote"      height="20" />

    <control progid="DecalControls.PushButton"  name="Strength"       height="20" />
    <control progid="DecalControls.PushButton"  name="Endurance"      height="20" />
    <control progid="DecalControls.PushButton"  name="Coordination"   height="20"  />
    <control progid="DecalControls.PushButton"  name="Quickness"      height="20"  />
    <control progid="DecalControls.PushButton"  name="Focus"          height="20"  />
